{
  "name": "bastyon-miniapp-vue-template",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.3.0",
  "description": "A Vue 3 template project demonstrating how to interact with the Bastyon platform using the Bastyon SDK.",
  "author": "Pocketnet Team",
  "license": "Apache-2.0",
  "scripts": {
    "build": "vite build",
    "dev": "vite --port 3333 --open",
    "lint": "eslint .",
    "typecheck": "vue-tsc --noEmit",
    "preview": "vite preview",
    "test": "vitest",
    "up": "taze major -I",
    "postinstall": "npx simple-git-hooks"
  },
  "dependencies": {
    "@radix-icons/vue": "^1.0.0",
    "@tailwindcss/vite": "^4.0.6",
    "@tanstack/vue-table": "^8.20.5",
    "@vee-validate/zod": "^4.15.0",
    "@vueuse/core": "^12.5.0",
    "big.js": "^6.2.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "i": "^0.3.7",
    "lucide-vue-next": "^0.475.0",
    "radix-vue": "^1.9.13",
    "tailwind-merge": "^3.0.1",
    "tailwindcss": "^4.0.6",
    "tailwindcss-animate": "^1.0.7",
    "vee-validate": "^4.15.0",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.2.0",
    "@types/bastyon-sdk": "github:DaniilKimlb/types-bastyon-sdk",
    "@types/node": "^20.17.17",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue-macros/volar": "^0.30.14",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.20.1",
    "eslint-plugin-format": "^1.0.1",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.4.3",
    "pnpm": "^10.3.0",
    "simple-git-hooks": "^2.11.1",
    "taze": "^18.5.0",
    "typescript": "^5.7.3",
    "unplugin-auto-import": "^19.0.0",
    "unplugin-vue-components": "^28.0.0",
    "unplugin-vue-macros": "^2.14.2",
    "unplugin-vue-router": "^0.11.2",
    "vite": "^6.1.0",
    "vitest": "^3.0.5",
    "vue-tsc": "^2.2.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
